r-border($color)
	position:relative
	&:before
		display:block
		position:absolute
		right:0
		top:0
		bottom:0
		width:100%
		border-right:1px solid $color
		content:''
border-1px($color)
	position:relative
	&:after
		display:block
		position:absolute
		left:0
		bottom:0
		width:100%
		border-bottom:1px solid $color
		content:''
t-border($color)
	position:relative
	&:before
		display:block
		position:absolute
		left:0
		top:0
		width:100%
		border-bottom:1px solid $color
		content:''
bg-color()
	background: linear-gradient(to bottom, #fd7474 0%,#e9302e 100%)	
bg-color-2($color)
	background:$color
bg-img($url)
		background-image:url($url+"@2x.png")
		background-repeat:no-repeat
		background-size:100% 100%
bg-imgnew($url)
		background-image:url($url+"@2x.jpg")
		background-repeat:no-repeat
		background-size:100% 100%		
bg-imgjpg($url)
		background-image:url($url+"@2x.jpg")
		background-repeat:no-repeat
		background-size:100% 100%
maxline($line)
	text-overflow: -o-ellipsis-lastline
	overflow: hidden
	text-overflow: ellipsis
	display: -webkit-box
	-webkit-line-clamp: $line
	-webkit-box-orient: vertical
				
